<script>

	window.addEventListener("DOMContentLoaded", () => {
		const wrapper = document.getElementById("ballWrapper");

		const ballImages = [
			"/images/balls/soccer-ball1.svg",
			"/images/balls/soccer-ball2.svg",
			"/images/balls/soccer-ball3.svg",
			"/images/balls/soccer-ball4.svg",
			"/images/balls/soccer-ball5.svg",
			"/images/balls/soccer-ball6.svg",
			"/images/balls/soccer-ball7.svg",
			"/images/balls/soccer-ball8.svg",
			"/images/balls/soccer-ball9.svg",
			"/images/balls/soccer-ball10.svg"
		];

		let isVisible = false;

		function spawnBall() {
			if (!isVisible || !wrapper) return;

			const ball = document.createElement("img");

			const randomIndex = Math.floor(Math.random() * ballImages.length);
			ball.src = ballImages[randomIndex];
			ball.alt = "ball";
			ball.className = "animated-ball";

			ball.style.bottom = `${Math.random() * 5}em`;
			ball.style.width = "5em";
			ball.style.height = "5em";
			ball.style.objectFit = "cover";

			wrapper.appendChild(ball);

			setTimeout(() => {
				if (wrapper.contains(ball)) {
					wrapper.removeChild(ball);
				}
			}, 6000);
		}

		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach(entry => {
					isVisible = entry.isIntersecting;
				});
			},
			{ threshold: 0.1 } // 10% visible counts as "visible"
		);

		if (wrapper) {
			observer.observe(wrapper);
		}

		setInterval(spawnBall, 800); // spawn every 0.8 seconds only if visible
	});



	document.addEventListener("DOMContentLoaded", function () {

		const drawers = {
			left: document.getElementById("leftDrawer"),
			left2: document.getElementById("leftDrawer2"),
			right: document.getElementById("rightDrawer"),
			right2: document.getElementById("rightDrawer2"),
			right3: document.getElementById("rightDrawer3")
		};

		const toggleDrawer = (drawerEl) => {
			if (!drawerEl) return;

			Object.values(drawers).forEach(d => {
				if (d && d !== drawerEl) d.classList.remove("open");
			});

			drawerEl.classList.toggle("open");
		};

		document.querySelector(".left-toggle")?.addEventListener("click", () => toggleDrawer(drawers.left));
		document.querySelector(".left-toggle2")?.addEventListener("click", () => toggleDrawer(drawers.left2));
		document.querySelector(".right-toggle")?.addEventListener("click", () => toggleDrawer(drawers.right));
		document.querySelector(".right-toggle2")?.addEventListener("click", () => toggleDrawer(drawers.right2));
		document.querySelector(".right-toggle3")?.addEventListener("click", () => toggleDrawer(drawers.right3));

	});

</script>
