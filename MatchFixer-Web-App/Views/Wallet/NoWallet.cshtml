@{
	ViewData["Title"] = "Wallet";
}

<div class="container mt-5">
	<div class="alert alert-warning text-center">
		<h4 class="alert-heading">You don't have a wallet yet.</h4>
		<p>To start placing bets, you'll need to create your wallet first.</p>
	</div>

	<div class="text-center">
		<form asp-action="CreateWallet" asp-controller="Wallet" method="post">
			<button type="submit" class="btn btn-primary btn-lg">Create Wallet</button>
		</form>
	</div>
</div>