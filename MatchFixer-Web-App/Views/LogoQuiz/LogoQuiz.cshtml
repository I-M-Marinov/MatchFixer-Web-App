@using MatchFixer.Core.ViewModels.LogoQuiz
@model LogoQuizQuestionViewModel

<div class="background-profile"></div>


<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
	<div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
		<div class="card-body text-center">

			<h5 class="card-title mb-4">Guess the Team</h5>

			<img src="@Model.LogoUrl" alt="Team Logo" class="img-fluid mb-3" style="max-height: 150px;" />

			<form method="post" asp-action="LogoQuiz">
				@Html.AntiForgeryToken()

				@foreach (var option in Model.Options)
				{
					<button type="submit"
					        name="SelectedAnswer"
					        value="@option"
					        class="btn btn-outline-primary mb-2 w-100">
						@option
					</button>
				}

				<input type="hidden" name="CorrectAnswer" value="@Model.CorrectAnswer" />
				<input type="hidden" name="LogoUrl" value="@Model.LogoUrl" />
			</form>

			@if (Model.IsCorrect.HasValue)
			{
				<div class="mt-3 alert @(Model.IsCorrect.Value ? "alert-success" : "alert-danger")">
					@((Model.IsCorrect.Value
						? "✅ Correct!"
						: $"❌ Wrong! The correct answer was {Model.CorrectAnswer}"))
				</div>

				<form method="get" asp-action="LogoQuiz">
					<button type="submit" class="btn btn-outline-success mt-3">
						Next Question
					</button>
				</form>
			}
		</div>
	</div>
</div>